    "version": "0.2.0",
    "configurations": [
        {
            "name": "template-editor (run)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build-Debug/template/code/editor.exe",
            "args": [
                "--root_remap=${workspaceRoot}/template",
                "--engine_remap=../engine/"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build-Debug/template",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "template-debug (run)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build-Debug/template/code/game.exe",
            "args": [
                "--root_remap=${workspaceRoot}/template",
                "--engine_remap=../engine/"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build-Debug/template",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "template-release (run)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build-Release/template/code/game.exe",
            "args": [
                "--root_remap=${workspaceRoot}/template",
                "--engine_remap=../engine/"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build-Release/template",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "template-debug (help)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build-Debug/template/code/game.exe",
            "args": [
                "-h"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build-Debug/template",
            "environment": [],
            "console": "integratedTerminal"
        }
    ]
}